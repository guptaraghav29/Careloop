{
  "rules": {
    ".read": false,
    ".write": false,
    "conversations": {
      "$conversationId": {
        ".read": "auth != null && (data.child('participants').child(auth.uid).exists() || root.child('users').child(auth.uid).child('role').val() == 'doctor')",
        ".write": "auth != null && (data.child('participants').child(auth.uid).exists() || root.child('users').child(auth.uid).child('role').val() == 'doctor')",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['id', 'participantId', 'content', 'timestamp', 'status'])",
            ".write": "auth != null && newData.child('participantId').val() == auth.uid"
          }
        },
        "participants": {
          ".validate": "newData.hasChildren(['userId', 'doctorId'])"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    }
  }
}
