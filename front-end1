        </div>
      )}

      <div className="max-w-7xl mx-auto p-6">
        {/* Header */}
        <header className="mb-8">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3">
              <div className="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-lg">
                <Heart className="w-8 h-8 text-white" />
              </div>
              <div>
                <h1 className="text-3xl font-bold bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent">
                  CareLoop
                </h1>
                <p className="text-sm text-gray-500 font-medium">Your AI Healthcare Companion</p>
              </div>
            </div>
            
            <div className="flex items-center gap-4">
              <button className="relative p-3 hover:bg-gray-100 rounded-xl transition-colors">
                <Bell className="w-6 h-6 text-gray-600" />
                <span className="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full"></span>
              </button>
              <button className="p-3 hover:bg-gray-100 rounded-xl transition-colors">
                <Phone className="w-6 h-6 text-gray-600" />
              </button>
              <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center text-white font-bold text-lg">
                SC
              </div>
            </div>
          </div>
        </header>

        {/* Navigation */}
        <nav className="mb-8 bg-white rounded-2xl p-2 shadow-lg border-2 border-gray-100">
          <div className="flex gap-2">
            {[
              { id: 'dashboard', label: 'Dashboard', icon: TrendingUp },
              { id: 'appointments', label: 'Appointments', icon: Calendar },
              { id: 'medications', label: 'Medications', icon: Pill },
              { id: 'insurance', label: 'Insurance', icon: Shield }
            ].map(tab => (
              <button
                key={tab.id}
                onClick={() => setActiveTab(tab.id)}
                className={`flex-1 flex items-center justify-center gap-2 px-6 py-4 rounded-xl font-semibold transition-all ${
                  activeTab === tab.id
                    ? 'bg-gradient-to-br from-emerald-500 to-teal-600 text-white shadow-lg'
                    : 'text-gray-600 hover:bg-gray-50'
                }`}
              >
                <tab.icon className="w-5 h-5" />
                <span>{tab.label}</span>
              </button>
            ))}
          </div>
        </nav>

        {/* Main Content */}
        <main className={`transition-all duration-500 ${animateIn ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-4'}`}>
          {activeTab === 'dashboard' && <DashboardView />}
          {activeTab === 'appointments' && <AppointmentsView />}
          {activeTab === 'medications' && <MedicationsView />}
          {activeTab === 'insurance' && (
            <div className="space-y-6">
              <h2 className="text-2xl font-bold text-gray-800 mb-6">Insurance Dashboard</h2>

              {/* Insurance Card */}
              <div className="bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 rounded-2xl p-8 text-white shadow-2xl relative overflow-hidden">
                <div className="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
                <div className="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full blur-3xl"></div>
                
                <div className="relative">
                  <div className="flex items-start justify-between mb-8">
                    <div>
                      <div className="text-sm opacity-80 mb-1">Health Insurance</div>
                      <div className="text-2xl font-bold">{userData.insurance.provider}</div>
                    </div>
                    <Shield className="w-12 h-12 opacity-80" />
                  </div>

                  <div className="grid grid-cols-2 gap-6 mb-6">
                    <div>
                      <div className="text-xs opacity-70 mb-1">Member ID</div>
                      <div className="font-mono text-lg font-semibold">{userData.insurance.memberId}</div>
                    </div>
                    <div>
                      <div className="text-xs opacity-70 mb-1">Group Number</div>
                      <div className="font-mono text-lg font-semibold">{userData.insurance.groupNumber}</div>
                    </div>
                  </div>

                  <div className="flex items-center justify-between">
                    <div>
                      <div className="text-xs opacity-70">Effective Date</div>
                      <div className="font-semibold">{userData.insurance.effectiveDate}</div>
                    </div>
                    <button 
                      onClick={() => alert('Downloading insurance card...')}
                      className="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg font-semibold transition-colors backdrop-blur-sm"
                    >
                      Download Card
                    </button>
                  </div>
                </div>
              </div>

              {/* Deductible & Out-of-Pocket Progress */}
              <div className="grid grid-cols-2 gap-4">
                <div className="bg-white rounded-2xl p-6 border-2 border-gray-100">
                  <div className="flex items-center justify-between mb-4">
                    <h3 className="font-bold text-gray-800">Annual Deductible</h3>
                    <DollarSign className="w-5 h-5 text-emerald-600" />
                  </div>
                  
                  <div className="mb-4">
                    <div className="flex items-end justify-between mb-2">
                      <div>
                        <div className="text-3xl font-bold text-emerald-600">
                          ${userData.insurance.deductible.met.toLocaleString()}
                        </div>
                        <div className="text-sm text-gray-500">of ${userData.insurance.deductible.individual.toLocaleString()}</div>
                      </div>
                      <div className="text-right">
                        <div className="text-lg font-bold text-gray-800">
                          {Math.round((userData.insurance.deductible.met / userData.insurance.deductible.individual) * 100)}%
                        </div>
                        <div className="text-xs text-gray-500">Met</div>
                      </div>
                    </div>
                    <div className="w-full bg-gray-100 rounded-full h-3 overflow-hidden">
                      <div 
                        className="h-full bg-gradient-to-r from-emerald-400 to-teal-500 rounded-full transition-all duration-1000"
                        style={{ width: `${(userData.insurance.deductible.met / userData.insurance.deductible.individual) * 100}%` }}
                      ></div>
                    </div>
                  </div>

                  <div className="text-sm text-gray-600">
                    <span className="font-semibold">${userData.insurance.deductible.remaining.toLocaleString()}</span> remaining
                  </div>
                </div>

                <div className="bg-white rounded-2xl p-6 border-2 border-gray-100">
                  <div className="flex items-center justify-between mb-4">
                    <h3 className="font-bold text-gray-800">Out-of-Pocket Max</h3>
                    <CreditCard className="w-5 h-5 text-blue-600" />
                  </div>
                  
                  <div className="mb-4">
                    <div className="flex items-end justify-between mb-2">
                      <div>
                        <div className="text-3xl font-bold text-blue-600">
                          ${userData.insurance.outOfPocketMax.met.toLocaleString()}
                        </div>
                        <div className="text-sm text-gray-500">of ${userData.insurance.outOfPocketMax.individual.toLocaleString()}</div>
                      </div>
                      <div className="text-right">
                        <div className="text-lg font-bold text-gray-800">
                          {Math.round((userData.insurance.outOfPocketMax.met / userData.insurance.outOfPocketMax.individual) * 100)}%
                        </div>
                        <div className="text-xs text-gray-500">Met</div>
                      </div>
                    </div>
                    <div className="w-full bg-gray-100 rounded-full h-3 overflow-hidden">
                      <div 
                        className="h-full bg-gradient-to-r from-blue-400 to-indigo-500 rounded-full transition-all duration-1000"
                        style={{ width: `${(userData.insurance.outOfPocketMax.met / userData.insurance.outOfPocketMax.individual) * 100}%` }}
                      ></div>
                    </div>
                  </div>

                  <div className="text-sm text-gray-600">
                    <span className="font-semibold">${userData.insurance.outOfPocketMax.remaining.toLocaleString()}</span> remaining
                  </div>
                </div>
              </div>

              {/* Coverage Details */}
              <div className="bg-white rounded-2xl p-6 border-2 border-gray-100">
                <h3 className="font-bold text-gray-800 mb-4 flex items-center gap-2">
                  <FileText className="w-5 h-5 text-emerald-600" />
                  Coverage Details
                </h3>
                <div className="grid grid-cols-3 gap-4">
                  <div className="p-4 bg-emerald-50 rounded-xl border border-emerald-200">
                    <div className="text-xs text-emerald-700 font-semibold mb-1">In-Network</div>
                    <div className="text-lg font-bold text-gray-800">{userData.insurance.coverage.inNetwork}</div>
                  </div>
                  <div className="p-4 bg-amber-50 rounded-xl border border-amber-200">
                    <div className="text-xs text-amber-700 font-semibold mb-1">Out-of-Network</div>
                    <div className="text-lg font-bold text-gray-800">{userData.insurance.coverage.outOfNetwork}</div>
                  </div>
                  <div className="p-4 bg-blue-50 rounded-xl border border-blue-200">
                    <div className="text-xs text-blue-700 font-semibold mb-1">Preventive Care</div>
                    <div className="text-lg font-bold text-gray-800">{userData.insurance.coverage.preventiveCare}</div>
                  </div>
                </div>
              </div>

              {/* Pre-Authorization & Claims */}
              <div className="grid grid-cols-2 gap-4">
                <div className="bg-white rounded-2xl p-6 border-2 border-gray-100">
                  <h3 className="font-bold text-gray-800 mb-4">Recent Claims</h3>
                  <div className="space-y-3">
                    <div className="flex items-center justify-between p-3 bg-emerald-50 rounded-xl border border-emerald-200">
                      <div>
                        <div className="font-semibold text-gray-800 text-sm">Lab Work - Jan 15</div>
                        <div className="text-xs text-gray-600">Quest Diagnostics</div>
                      </div>
                      <div className="text-right">
                        <div className="text-emerald-700 font-bold">Approved</div>
                        <div className="text-xs text-gray-600">$0 due</div>
                      </div>
                    </div>
                    <div className="flex items-center justify-between p-3 bg-emerald-50 rounded-xl border border-emerald-200">
                      <div>
                        <div className="font-semibold text-gray-800 text-sm">Office Visit - Jan 8</div>
                        <div className="text-xs text-gray-600">Dr. Martinez</div>
                      </div>
                      <div className="text-right">
                        <div className="text-emerald-700 font-bold">Approved</div>
                        <div className="text-xs text-gray-600">$25 copay</div>
                      </div>
                    </div>
                  </div>
                  <button 
                    onClick={() => alert('View all claims history...')}
                    className="w-full mt-4 text-emerald-600 hover:text-emerald-700 font-semibold text-sm"
                  >
                    View All Claims â†’
                  </button>
                </div>

                <div className="bg-white rounded-2xl p-6 border-2 border-gray-100">
                  <h3 className="font-bold text-gray-800 mb-4">Prior Authorizations</h3>
                  <div className="space-y-3">
                    <div className="flex items-center justify-between p-3 bg-amber-50 rounded-xl border border-amber-200">
                      <div>
                        <div className="font-semibold text-gray-800 text-sm">MRI Scan</div>
                        <div className="text-xs text-gray-600">City Imaging Center</div>
                      </div>
                      <div className="text-right">
                        <div className="text-amber-700 font-bold">Pending</div>
                        <div className="text-xs text-gray-600">2-3 days</div>
                      </div>
                    </div>
                  </div>
                  <div className="mt-4 p-3 bg-blue-50 rounded-xl border border-blue-200 text-sm text-blue-800">
                    <div className="font-semibold mb-1">AI Agent is tracking this</div>
                    <div className="text-xs">You'll be notified as soon as it's approved</div>
                  </div>
                </div>
              </div>

              {/* Quick Actions */}
              <div className="grid grid-cols-3 gap-4">
                <button 
                  onClick={() => setShowVerifyCoverage(true)}
                  className="bg-gradient-to-br from-emerald-500 to-teal-600 text-white rounded-2xl p-6 text-left hover:shadow-xl transition-all hover:scale-105 group"
                >
                  <CheckCircle className="w-8 h-8 mb-3 group-hover:rotate-12 transition-transform" />
                  <div className="font-bold text-lg">Verify Coverage</div>
                  <div className="text-emerald-100 text-sm mt-1">Check eligibility</div>
                </button>
                <button 
                  onClick={() => setShowFileClaim(true)}
                  className="bg-gradient-to-br from-blue-500 to-indigo-600 text-white rounded-2xl p-6 text-left hover:shadow-xl transition-all hover:scale-105 group"
                >
                  <FileText className="w-8 h-8 mb-3 group-hover:rotate-12 transition-transform" />
                  <div className="font-bold text-lg">File Claim</div>
                  <div className="text-blue-100 text-sm mt-1">Submit manually</div>
                </button>
                <button 
                  onClick={() => setShowFindProviders(true)}
                  className="bg-gradient-to-br from-purple-500 to-pink-600 text-white rounded-2xl p-6 text-left hover:shadow-xl transition-all hover:scale-105 group"
                >
                  <Building className="w-8 h-8 mb-3 group-hover:rotate-12 transition-transform" />
                  <div className="font-bold text-lg">Find Providers</div>
                  <div className="text-purple-100 text-sm mt-1">In-network search</div>
                </button>
              </div>
            </div>
          )}
        </main>
      </div>

      {/* Modals */}
      {showScheduleAppointment && <ScheduleAppointmentModal />}
      {showReschedule && <RescheduleModal />}
      {showVerifyCoverage && <VerifyCoverageModal />}
      {showFileClaim && <FileClaimModal />}
      {showFindProviders && <FindProvidersModal />}

      <style>{`
        @keyframes slideInRight {
          from {
            transform: translateX(100%);
            opacity: 0;
          }
          to {
            transform: translateX(0);
            opacity: 1;
          }
        }

        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
        
        * {
          font-family: 'Plus Jakarta Sans', system-ui, -apple-system, sans-serif;
        }

        button {
          font-family: 'Plus Jakarta Sans', system-ui, -apple-system, sans-serif;
        }
      `}</style>
    </div>
  );
};

export default CareLoop;